{
    "name": "vscode-opennewinstance",
    "displayName": "Open Folder Context Menus for VS Code",
    "description": "Quickly open a new instance of VS Code from the Explorer",
    "version": "0.0.13",
    "author": "Chris Dias",
    "publisher": "chrisdias",
    "galleryBanner": {
        "color": "#37699A",
        "theme": "dark"
    },
    "icon": "images/Open_file.png",
    "homepage": "https://github.com/chrisdias/vscode-opennewinstance/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github/chrisdias/vscode-opennewinstance.git"
    },
    "bugs": {
        "url": "https://github.com/chrisdias/vscode-opennewinstance/issues"
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "license": "SEE LICENSE IN LICENSE.md",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.openNewInstance",
        "onCommand:extension.scopeToHere"
    ],
    "main": "./dist/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.openNewInstance",
                "title": "Open New Workbench Here"
            },
            {
                "command": "extension.scopeToHere",
                "title": "Reopen Workbench Here"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "extension.openNewInstance",
                    "group": "navigation@99"
                },
                {
                    "command": "extension.scopeToHere",
                    "group": "navigation@98",
                    "when": "explorerResourceIsFolder"
                }
            ],
            "commandPalette": [
                {
                    "command": "extension.openNewInstance",
                    "when": "never"
                },
                {
                    "command": "extension.scopeToHere",
                    "when": "never"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/glob": "^7.1.3",
        "@types/node": "^12.11.7",
        "glob": "^7.1.6",
        "ts-loader": "^8.0.14",
        "typescript": "^4.1.3",
        "webpack": "^5.76.0",
        "webpack-cli": "^4.4.0"
    }
}
